{
    // 1. Turn the Brain back on (Fixes struct autocomplete)
    "C_Cpp.intelliSenseEngine": "default",

    // 2. Keep the noise/errors off
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.suggest.stdlib-enabled": false,
    
    // 3. Hide snippets and keywords
    "editor.snippetSuggestions": "none",
    "editor.suggest.showKeywords": false
}